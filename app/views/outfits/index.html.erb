<%= render 'shared/navbar' %>

<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Outfits</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <% if @query %>
        <p>You searched for <strong><%= @query %></strong>. We found <%= @outfits.count %> outfits out of our <%= Outfit.count %> on our website.</p>
      <% else %>
        <p>All our <%= Outfit.count %> outfits.</p>
      <% end %>
    </div>
  </div>
  
  <div class="row">
    <% @outfits.each do |outfit| %>
      <div class="col-4">
        <div class="outfit-card">
          <div class="outfit-card-image text-center">
            <%= cl_image_tag(outfit.photos.first.key, crop: :fill) %>
          </div>
          <div class="outfit-card-content">
            <div class="outfit-card-title">
              <div class="name">
                <h4><%= outfit.name %></h4>
              </div>
              <div class=category>
                <p><%= outfit.category %></p>
              </div>            
            </div>
            <div class="flex">
              <div class="flex ml-3">
                <div class=price>
                  <i class="material-icons mr-2">€ per day:</i> <%= outfit.price %>
                </div>
              </div>
            </div>
          </div>
          <div class="outfit-card-actions">
            <%= link_to 'More info', outfit_path(outfit), class: "btn btn-flat" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="rent-bouton">
    <% if policy(Outfit).create? %>
      <%= link_to "Rent your outfit !", new_outfit_path, class: "btn btn-gradient" %>
    <% end %>
  </div>
</div>

