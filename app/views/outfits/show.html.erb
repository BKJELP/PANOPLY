<%= render 'shared/navbar' %>

<div class="container margin-top-negative">
  <div class="row">
    <div>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1525519288380-5e24e78d2b72?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80)"
      Breakfast>
        <h1>Category: <%= @outfit.category %></h1>
      </div>
      <div class="card-product">
        <%= cl_image_tag(@outfit.photo.key, crop: :fill) %>
        <div class="card-product-infos">
          <h2><%= @outfit.name %></h2>
          <p><strong>A bit more about this outfit...</strong></h4>
          <p>The daily price to rent this outfit is:<strong> <%= @outfit.price %> euro </strong></p>
          <p><strong>Is this outfit perfect for you?</strong></p>
          <p><%= @outfit.description %></p>
        </div>
      </div>
      <br>
      <div class="d-flex justify-content-center">
      <% if ['pending', 'canceled', 'validated'].include?(@outfit.reservations.last&.status) %>
        <p>We are sorry, this outfit is already booked!</p>
      <% else %>
        <div class="btn btn-flat">
         <%= link_to 'Book this outfit', new_outfit_reservation_path(@outfit)%>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
