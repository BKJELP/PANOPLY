<div class="card-category-show mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://i.pinimg.com/originals/21/c1/90/21c190b2cad11c6fe4441c7ec9a9b924.jpg)">
  
  <h1 class="show-title">Category: <%= @outfit.category %></h1>
</div>
<div class="container-fluid show-container">
  <div class="row">
    <div  class="col-6">
      <div class="card-product">
        <%= cl_image_tag(@outfit.photos.first.key, crop: :fill) %>
        <div class="card-product-infos">
          <h2><%= @outfit.name %></h2>
          <p><strong>----------</strong></h4>
          <p>The daily price to rent this outfit is:<strong> <%= @outfit.price %> euro </strong></p>
          <p><strong>Is this outfit perfect for you?</strong></p>
          <p><%= @outfit.description %></p>
        </div>
      </div>
    </div>
    <div  class="col-6">
      <div class="calendar">
        <% if ['validated'].include?(@outfit.reservations.last&.status) %>
          <p>We are sorry, this outfit is already booked!</p>
        <% else %>
          <%= simple_form_for [ @outfit, @reservation ] do |f| %>
            <%= f.input :start_date, html5: true %>
            <%= f.input :end_date, html5: true %>
            <%= f.submit "Book this outfit", class: "btn-flat-calendar" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <% if current_user.id == @outfit.user_id %>
    <div class= "btn-flat">
      <%= link_to "Edit this outfit",  edit_outfit_path(@outfit), class: 'link-unstyled' %>
    </div>
  <% end %>
 </div>


