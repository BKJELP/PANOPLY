<%= render 'shared/navbar' %>

<div class="container margin-top-negative">
  <div class="row">
    <div>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)"
      Breakfast>
        <h1>Category: <%= @outfit.category %></h1>
      </div>
      <div class="card-product">
      <%= cl_image_tag(@outfit.image, crop: :fill) %>
        <div class="card-product-infos">
          <h2><%= @outfit.name %></h2>
          <p><strong>A bit more about this outfit...</strong></h4>
          <p>The daily price to rent this outfit is:<strong> <%= @outfit.price %> euro </strong></p>
          <p><strong>Is this outfit perfect for you?</strong></p>
          <p><%= @outfit.description %></p>
        </div>  
      </div>
      <div class="d-flex justify-content-center">
        <a class="btn btn-flat" href="#">Book now</a>
      </div>
    </div>     
  </div>
</div>
