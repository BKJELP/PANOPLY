<div class="container mt-3">

  <div class="row">
    <div class="col-12">
      <h1>Your closet</h1>
    </div>
  </div>

<div class="row">
    <% @outfits.each do |outfit| %>
      <div class="col-4">
        <div class="outfit-card">
          <div class="outfit-card-image" style="background-image: url('<%= outfit.image %>')"></div>
          <div class="outfit-card-content">
            <div class="outfit-card-title">
              <h4><%= outfit.name %></h4>
            </div>
            <p><%= outfit.category %></p>
            <div class="flex">
              <div class="flex ml-3">
                <i class="material-icons mr-2">â‚¬</i> <%= outfit.price %>
              </div>
            </div>
          </div>
          <div class="outfit-card-actions">
            <%= link_to 'More info', outfit_path(outfit) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
